---
import { siteConfig } from "@/site.config";
const { links, cta } = siteConfig.nav;
import { Icon } from 'astro-icon/components'

const navigationLinks = links.slice(0, -1);
const loginLink = links[links.length - 1];
---

<nav class="w-full">
    <div class="mx-[72px] pt-10">
      <div class="flex items-center h-16">
        <div class="flex items-center">
          <a href="/" class="flex items-center gap-2 text-4xl font-semibold text-white">
            <Icon name="logo" class="w-6 h-6 text-white" />
            Listening
          </a>
          <div class="hidden md:flex items-center ml-12 gap-8">
            {
              navigationLinks.map(({ href, title }) => (
                <a href={href} class="text-lg text-white hover:text-white/80">
                  {title}
                </a>
              ))
            }
          </div>
        </div>
  
        <div class="flex items-center gap-8 ml-auto">
          <a href={loginLink.href} class="text-lg text-white hover:text-white/80">
            {loginLink.title}
          </a>
          <button class="text-lg bg-white  px-4 py-3 rounded-full border border-white hover:bg-white/90">
            <a class="text-black font-medium" href={cta.href}>{cta.title}</a>
          </button>
        </div>
      </div>
    </div>
  </nav>