---
import { Icon } from 'astro-icon/components';
import { siteConfig } from '@/site.config';

const { sections, bottomLinks } = siteConfig.footer;
---

<footer class="mt-32 pb-6 px-4 sm:px-6 md:px-8 lg:px-[72px]">
  <div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-[auto_repeat(4,auto)] gap-8 lg:gap-12 justify-between pb-20 border-b border-white/10">
      {/* Logo and Tagline */}
      <div class="lg:max-w-xs">
        <a href="/" class="inline-flex items-center gap-2 text-2xl font-bold text-white mb-12">
          <Icon name="logo" class="w-6 h-6" />
          <span>{siteConfig.name}</span>
        </a>
        <p class="text-sm text-white/70">{siteConfig.tagline}</p>
      </div>

      {sections.map((section) => (
        <div>
          <h3 class="text-white text-lg font-medium mb-4">{section.title}</h3>
          <ul class="space-y-3">
            {section.links.map((link) => (
              <li>
                <a href={link.href} class="text-white/70 font-light hover:text-white transition-colors">
                  {link.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    {/* Bottom Section */}
    <div class="mt-12 flex flex-col sm:flex-row justify-between items-center gap-4">
      <div class="flex items-center gap-4 text-sm text-white/70">
        {bottomLinks.map((link, index) => (
          <>
            <a href={link.href} class="hover:text-white font-light transition-colors">
              {link.title}
            </a>
            {index < bottomLinks.length - 1 && <span>|</span>}
          </>
        ))}
      </div>
      <div class="text-sm text-white/70 font-light">
        {new Date().getFullYear()} {siteConfig.name}. All rights reserved.
      </div>
    </div>
  </div>
</footer>