---
import type { FeatureSlide } from '@/data/overview';

interface Props {
  features: FeatureSlide[];
}

const { features } = Astro.props;
---

<div class="grid grid-cols-[1.5fr_auto_0.8fr] gap-12 max-w-[1300px] mx-auto">
  <!-- Interactive words -->
  <div class="flex flex-col gap-8 justify-center">
    <div class="slider-words flex flex-col items-end">
      {features.map((feature) => (
        <button 
          class:list={[
            "text-4xl font-bold transition-all duration-300 hover:text-blue-600 mb-8 text-right text-nowrap",
            { "active": feature.id === 0, "text-gray-400": feature.id !== 0 }
          ]} 
          data-index={feature.id}
        >
          {feature.title}
        </button>
      ))}
    </div>
    <a 
      href="#" 
      class="inline-flex items-center gap-2 text-base font-medium bg-black text-white px-6 py-3 rounded-full hover:opacity-90 transition-all duration-300 self-end"
    >
      Try it now!
    </a>
  </div>

  <!-- Slider content -->
  <div class="relative overflow-hidden rounded-3xl bg-gray-100 w-[330px] h-[720px] justify-self-end">
    <div class="slider-container transition-transform duration-500 h-full">
      {features.map((feature) => (
        <div class:list={[
          "slide absolute inset-0 transition-opacity duration-500",
          { "opacity-100": feature.id === 0, "opacity-0": feature.id !== 0 }
        ]}>
          <img src={feature.image} alt={feature.alt} class="w-[330px] h-[720px]">
        </div>
      ))}
    </div>
  </div>

  <!-- Vertical Scrollbar -->
  <div class="flex items-center">
    <div class="relative h-[600px] w-1">
      <div class="absolute inset-0 bg-gray-200 rounded-full">
        <div class="slider-progress absolute w-full bg-blue-600 rounded-full transition-all duration-500" style="height: 16.66%; top: 0%;"></div>
      </div>
    </div>
  </div>
</div>

<script>
  import { Slider } from '@/lib/slider';

  const slider = new Slider();

  document.addEventListener('astro:unmount', () => {
    slider.destroy();
  });
</script>

<style>
  .slider-words button.active {
    color: #000000;
    font-weight: 900;
  }
</style>
