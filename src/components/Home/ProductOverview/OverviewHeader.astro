---
import { Icon } from 'astro-icon/components'

interface Props {
  title: string;
  description: string;
  ctaText: string;
}

const { title, description, ctaText } = Astro.props;
---

<div class="text-center mb-16">
  <h2 class="text-5xl font-bold mb-6">{title}</h2>
  <p class="text-gray-600 max-w-70ch mx-auto">{description}</p>
  <a 
    href="#" 
    class="inline-flex items-center gap-2 mt-4 text-lg font-medium hover:gap-3 transition-all duration-300"
  >
    {ctaText}
    <Icon name="arrow-right" class="w-5 h-5" />
  </a>
</div>
