---
import { Icon } from 'astro-icon/components';
import { notes } from '@data/features';

interface Note {
  text: string;
  subtext: string;
}
---

<div class="bg-[#171A24] rounded-xl sm:rounded-2xl pt-4 sm:pt-6 lg:pt-8 px-3 sm:px-4 lg:px-6 pb-4 sm:pb-5 lg:pb-6 lg:col-span-2">
  <div class="flex flex-col h-full">
    <div class="relative flex-1 mb-6 sm:mb-8 lg:mb-10">
      <div class="flex flex-col lg:flex-row max-lg:w-full justify-center items-center gap-4 sm:gap-5 lg:gap-3 xl:gap-4 mx-auto relative lg:h-[220px] xl:h-[280px]">
        {notes.map((note, index) => (
          <div class={`bg-[#292c35] max-lg:mb-6 border max-lg:w-full border-white/[0.16] rounded-xl sm:rounded-2xl w-full lg:w-[240px] xl:w-[300px] mx-auto ${
            index === 0 ? 'lg:-rotate-[8deg] lg:translate-y-4' :
            index === 1 ? 'lg:pb-4 xl:pb-8' :
            'lg:rotate-[8deg] lg:translate-y-4'
          } p-4 sm:p-5 lg:p-5 xl:p-6`}>
            <div class="flex flex-col h-full max-lg:gap-4 lg:gap-4 xl:gap-8">
              <div class="flex-1">
                <p class="text-base sm:text-lg lg:text-base xl:text-lg font-medium mb-2 lg:mb-2 xl:mb-3">
                  {note.text}
                </p>
                <p class="text-sm sm:text-[15px] lg:text-xs xl:text-[15px] text-white/70 leading-relaxed lg:leading-normal xl:leading-relaxed">
                  {note.subtext}
                </p>
              </div>
              <div class="flex gap-3 sm:gap-4 lg:gap-3 xl:gap-4">
                <button class="hover:bg-white/10 p-1.5 sm:p-2 rounded-lg transition-colors">
                  <Icon name="pencil" class="w-4 sm:w-5 h-4 sm:h-5" />
                </button>
                <button class="hover:bg-white/10 p-1.5 sm:p-2 rounded-lg transition-colors">
                  <Icon name="share" class="w-4 sm:w-5 h-4 sm:h-5" />
                </button>
                <button class="hover:bg-white/10 p-1.5 sm:p-2 rounded-lg transition-colors">
                  <Icon name="download" class="w-4 sm:w-5 h-4 sm:h-5" />
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <div class="text-center lg:text-left">
      <h3 class="text-2xl sm:text-2xl lg:text-2xl xl:text-3xl font-black mb-3 lg:mb-4">
        Take notes easily
      </h3>

      <p class="text-white/70 text-xs sm:text-sm lg:text-sm xl:text-base font-light max-w-[600px] lg:max-w-none mx-auto lg:mx-0">
        Eu risus sed at turpis eu pharetra. Non turpis lectus eleifend nisl fringilla dui mollis lectus. Magna scelerisque ut et donec.
      </p>
    </div>
  </div>
</div>

<style>
  @media (max-width: 1023px) {
    .flex-col > div:not(:first-child) {
      margin-top: -1rem;
    }
  }
</style>
