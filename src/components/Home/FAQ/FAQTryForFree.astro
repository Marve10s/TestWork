---
import { Image } from 'astro:assets';
import qrAppStore from '@/assets/qr_appstore.png';
import qrGooglePlay from '@/assets/qr_google.png';
import dashboard from '@/assets/dashboard-faq.png';
import textFaq from '@/assets/text-faq2.png';
---

<section class="relative overflow-hidden mt-8 sm:mt-12 rounded-2xl sm:rounded-[32px] bg-gradient-to-r from-[#0587FB] to-[#0587FB99]">
  <div class="relative float-right py-12 md:py-16 lg:py-20 hidden lg:block">
    <Image 
      src={dashboard}
      alt="Dashboard"
      class="w-[500px] xl:w-[650px] transition-all duration-300"
      width={800}
      height={600}
    />
    <Image 
      src={textFaq}
      alt="FAQ Text"
      class="absolute -left-20 lg:-left-24 bottom-12 md:bottom-16 lg:bottom-20 h-[300px] xl:h-[400px] w-[150px] xl:w-[200px] z-20 transition-all duration-300"
      width={400}
      height={300}
    />
  </div>
  <div class="p-6 sm:p-8 md:p-16 lg:px-20 lg:py-20 relative z-30 h-full">
    <div class="grid grid-cols-1 lg:grid-cols-[1fr_auto] gap-6 md:gap-8 items-start max-w-[1400px] h-full">
      <div class="text-white flex flex-col min-h-[450px] sm:min-h-[500px] lg:min-h-[600px] lg:max-w-[600px]">
        <div>
          <div class="space-y-3 sm:space-y-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold leading-tight">
              Try listening free <br class="hidden sm:block"> for 3 days
            </h2>
            <p class="text-white/90 pt-2 sm:pt-4 max-w-[45ch] text-sm sm:text-base">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus nibh ipsum, mollis non suscipit quis, eleifend eget purus.
            </p>
          </div>

          <a 
            href="#" 
            class="inline-block bg-black text-white px-5 sm:px-6 md:px-8 py-2.5 sm:py-3 md:py-4 rounded-full font-medium hover:bg-opacity-90 transition-all duration-300 mt-6 sm:mt-8 text-sm sm:text-base"
          >
            Try it now
          </a>
        </div>

        <div class="mt-auto space-y-3 sm:space-y-4">
          <!-- App Store -->
          <a href="#" class="flex items-center gap-2 sm:gap-3 bg-white/10 p-2.5 sm:p-3 rounded-xl hover:bg-white/15 transition-all duration-300 max-w-[280px] sm:max-w-[320px] md:max-w-[350px]">
            <div class="rounded-lg p-1.5 sm:p-2 shrink-0">
              <Image 
                src={qrAppStore} 
                alt="App Store QR Code"
                class="w-9 sm:w-10 md:w-12 h-9 sm:h-10 md:h-12"
                width={48}
                height={48}
              />
            </div>
            <div>
              <p class="font-bold text-sm sm:text-base md:text-lg text-nowrap">Download from App Store</p>
              <p class="text-white/90 text-xs sm:text-sm md:text-base">Download for iOS</p>
            </div>
          </a>

          <!-- Google Play -->
          <a href="#" class="flex items-center gap-2 sm:gap-3 bg-white/10 p-2.5 sm:p-3 rounded-xl hover:bg-white/15 transition-all duration-300 max-w-[300px] sm:max-w-[340px] md:max-w-[375px]">
            <div class="rounded-lg p-1.5 sm:p-2 shrink-0">
              <Image 
                src={qrGooglePlay} 
                alt="Google Play QR Code"
                class="w-9 sm:w-10 md:w-12 h-9 sm:h-10 md:h-12"
                width={64}
                height={64}
              />
            </div>
            <div>
              <p class="font-bold text-sm sm:text-base md:text-lg text-nowrap">Download from Google Play</p>
              <p class="text-white/90 text-xs sm:text-sm md:text-base">Download for Android</p>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
